<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_padding"
    android:background="@drawable/selector_border_background_white"
    android:paddingEnd="0dp"
    android:paddingTop="@dimen/layout_padding">

    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        style="@style/text_primary"
        android:text="@string/app_name" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_content"
        style="@style/text_primary_blue_dark"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_normal"
        android:gravity="center"
        android:textColor="@color/colorBlueDark"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_height_normal"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/layout_margin_top_bot_small"
        android:background="@color/colorUnderline" />

</RelativeLayout>