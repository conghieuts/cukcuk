<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvVertical"
            style="@style/text_normal"
            android:layout_margin="@dimen/layout_margin_small"
            android:text="@string/app_name" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lcChart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_chart_small"
            android:layout_below="@+id/tvVertical" />

        <TextView
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHorizontal"
            style="@style/text_normal"
            android:layout_below="@+id/lcChart"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:text="@string/app_name" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/layout_margin"
        android:id="@+id/rv_report_overview_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background_white"
        android:paddingTop="@dimen/layout_padding" />
</LinearLayout><!--
